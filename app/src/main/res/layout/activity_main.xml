<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zjm.photopickdemo.MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photo_pick"
        android:text="照片选取"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_button"
        android:text="switch按钮"
        android:layout_below="@+id/photo_pick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_button"
        android:text="通知栏测试"
        android:layout_below="@+id/switch_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:text="第三方登录按钮"
        android:layout_below="@+id/notification_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridview_button"
        android:text="gridview"
        android:layout_below="@+id/login_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weichat_tab"
        android:text="微信底部Tab"
        android:layout_below="@+id/gridview_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipview_button"
        android:layout_below="@+id/weichat_tab"
        android:text="qq长按tip"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diy_view"
        android:text="自定义控件"
        android:layout_below="@+id/tipview_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_bar_button"
        android:layout_below="@+id/diy_view"
        android:text="顶部状态栏颜色"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/socket_button"
        android:layout_below="@+id/status_bar_button"
        android:text="socket通讯"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sensor_button"
        android:layout_below="@+id/socket_button"
        android:text="传感器"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dbflow_button"
        android:layout_alignParentRight="true"
        android:text="db数据库测试"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/video_activity_button"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dbflow_button"
        android:text="视频播放"/>

</RelativeLayout>
